{
    "window.menuBarVisibility": "toggle",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "workbench.panel.defaultLocation": "right",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.go": "${capture}.go, ${capture}_test.go, ${capture}_internal_test.go, ",
        "flake.nix": "flake.lock, .envrc"
    },
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.direnv": true
    },
    "editor.autoSurround": "quotes",
    "editor.renderWhitespace": "trailing",
    "editor.formatOnSave": true,
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "iain",
        "brokkr",
        "chronos",
        "potamoi",
        "pkgs",
        "nixpkgs",
        "nixos",
        "direnv",
        "envconfig",
        "taskfile",
        "gofumpt"
    ],
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/{info,lfs,logs,refs,objects}/**",
        ".git/{index,*refs,*HEAD}",
        ".vscode",
        ".vscode-insiders",
        ".direnv"
    ],
    "go.formatTool": "gofumpt",
    "go.testEnvFile": "~/dev/go-test.env",
    "go.testOnSave": true,
    "go.lintTool": "golangci-lint",
    "go.lintOnSave": "workspace",
    "go.testFlags": [
        "-v"
    ],
    "json.schemas": [
        {
            "fileMatch": [
                "vscode-keybindings.json"
            ],
            "url": "vscode://schemas/keybindings"
        },
        {
            "fileMatch": [
                "vscode-settings.json"
            ],
            "url": "vscode://schemas/settings/user"
        }
    ],
    "yaml.schemas": {
        "https://taskfile.dev/schema.json": [
            "Taskfile.yml"
        ]
    },
    "redhat.telemetry.enabled": false
}
