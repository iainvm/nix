{
    "window.menuBarVisibility": "toggle",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "file-icons",
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "workbench.panel.defaultLocation": "right",
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.go": "${capture}.go, ${capture}_test.go, ${capture}_internal_test.go, ",
        "flake.nix": "flake.lock, .envrc"
    },
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.direnv": true,
        "**/.task": true
    },
    "editor.renderWhitespace": "trailing",
    "editor.formatOnSave": true,
    "nix.formatterPath": "alejandra",
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nixd",
    "nix.serverSettings": {
        "nixd": {
            "diagnostics": {
                "ignored": [
                    "unused_binding",
                    "unused_with"
                ]
            },
            "formatting": {
                "command": [
                    "alejandra"
                ]
            }
        }
    },
    "task.checkForUpdates": false,
    "cSpell.language": "en-GB",
    "cSpell.customDictionaries": {
        "userDictionary": {
            "name": "userDictionary",
            "path": "~/.config/dictionary.txt",
            "scope": "user",
            "addWords": true
        }
    },
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/{info,lfs,logs,refs,objects}/**",
        ".git/{index,*refs,*HEAD}",
        ".vscode",
        ".vscode-insiders",
        ".direnv"
    ],
    "go.formatTool": "gofumpt",
    "go.testEnvFile": "~/dev/go-test.env",
    "go.testOnSave": true,
    "go.lintTool": "golangci-lint",
    "go.lintOnSave": "workspace",
    "go.useLanguageServer": true,
    "gopls": {
        "formatting.gofumpt": true
    },
    "go.testFlags": [
        "-v"
    ],
    "json.schemas": [
        {
            "fileMatch": [
                "vscode/keybindings.json",
                "vscode-keybindings.json"
            ],
            "url": "vscode://schemas/keybindings"
        },
        {
            "fileMatch": [
                "vscode/settings.json",
                "vscode-settings.json"
            ],
            "url": "vscode://schemas/settings/user"
        }
    ],
    "yaml.schemas": {
        "https://taskfile.dev/schema.json": [
            "Taskfile.yml"
        ]
    },
    "redhat.telemetry.enabled": false,
    "markdown.validate.enabled": true
}
